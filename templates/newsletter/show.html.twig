{% extends 'admin/contact/index.html.twig' %}

{% block title %}Fiche{% endblock %}

{% block content %}
    <h1>Fiche individuelle</h1>

    <div class="container">
<div class="row">

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ newsletter.email }}</td>
            </tr>
            <tr>
                <th>Subscribed</th>
                <td>{{ newsletter.subscribed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ newsletter.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ newsletter.created ? newsletter.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('admin_newsletter_index') }}">Retour Ã  la liste</a>

    <a class="btn btn-light" href="{{ path('admin_newsletter_edit', {'id': newsletter.id}) }}">Editer</a>

