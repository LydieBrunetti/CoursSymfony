{% extends 'admin/contact/index.html.twig' %}



{% block title %}Liste Newsletter{% endblock %}

{% block content %}
    <h1>Liste des inscrits à la Newsletter</h1>
    <br>
<div class="container">
    <div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Subscribed</th>
                <th>Id</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newsletter in newsletters %}
            <tr>
                <td>{{ newsletter.email }}</td>
                <td>{{ newsletter.subscribed ? 'Yes' : 'No' }}</td>
                <td>{{ newsletter.id }}</td>
                <td>{{ newsletter.created ? newsletter.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('admin_newsletter_show', {'id': newsletter.id}) }}"><i class="fa fa-eye"></i></a>
                    <a class="btn btn-light" href="{{ path('admin_newsletter_edit', {'id': newsletter.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun contact trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('admin_newsletter_new') }}">Créer un nouveau contact</a>
</div>
</div>

{% endblock %}
